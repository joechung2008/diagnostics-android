<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deployment ID"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/deployment_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hostname"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/hostname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:id="@+id/node_versions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Node Versions"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/node_versions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Server ID"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/server_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:id="@+id/uptime_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Uptime"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/uptime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total Sync-All Count"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/total_sync_all_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />

    </LinearLayout>
</ScrollView>